.container {
  height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

.search-bar {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.search-input {
  width: 100%;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.section {
  padding: 30rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.city-grid {
  display: flex;
  flex-wrap: wrap;
}

.city-item {
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  min-width: 120rpx;
}

.city-item.current-city {
  background-color: #47a86c;
  color: #fff;
}

.city-list {
  height: calc(100vh - 400rpx);
  background-color: #fff;
  padding: 0 20rpx;
}

.city-group {
  margin-bottom: 20rpx;
}

.city-letter {
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  color: #47a86c;
  background-color: #f5f5f5;
  padding-left: 20rpx;
  margin-bottom: 10rpx;
}

.city-items {
  display: flex;
  flex-wrap: wrap;
}

.city-items .city-item {
  margin-right: 20rpx;
  margin-bottom: 15rpx;
}

.letter-index {
  position: fixed;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  z-index: 999;
  display: flex;
  flex-direction: column;
  padding: 20rpx 10rpx;
}

.letter-item {
  padding: 5rpx 10rpx;
  font-size: 22rpx;
  color: #47a86c;
  text-align: center;
  line-height: 1.5;
}

