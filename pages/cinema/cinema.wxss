.filter-bar {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  padding: 12rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  min-height: 64rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.filter-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.filter-item-gradient {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.92) 100%);
}

.filter-icon-wrapper {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
}

.filter-icon {
  font-size: 28rpx;
}

.filter-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 8rpx;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s ease;
}

.filter-item:active .filter-arrow {
  transform: rotate(180deg);
}

.search-icon-wrapper {
  margin-left: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-icon-bg {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
}

.search-icon-bg:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.5);
}

.search-icon {
  font-size: 32rpx;
  color: #fff;
}

.content-wrapper {
  min-height: calc(100vh - 200rpx);
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f5f5 100%);
  padding-bottom: 20rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(102, 126, 234, 0.1);
  border-top-color: #667eea;
  border-right-color: #764ba2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.2);
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  min-height: calc(100vh - 200rpx);
}

.empty-icon-wrapper {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-icon-bg {
  width: 240rpx;
  height: 240rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
  }
}

.empty-icon {
  font-size: 120rpx;
  filter: brightness(1.2);
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

.cinema-list {
  height: calc(100vh - 200rpx);
  padding: 24rpx 20rpx;
}

.cinema-item {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafbff 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.cinema-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
}

.cinema-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.12);
}

.cinema-left {
  margin-right: 24rpx;
  display: flex;
  align-items: flex-start;
}

.cinema-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.cinema-icon {
  font-size: 48rpx;
  filter: brightness(1.2);
}

.cinema-info {
  flex: 1;
  min-width: 0;
}

.cinema-name-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.cinema-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-right: 12rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cinema-badge {
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
  font-size: 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.cinema-address-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.address-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
  opacity: 0.7;
}

.cinema-address {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cinema-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  font-size: 22rpx;
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  border-radius: 20rpx;
  font-weight: 500;
}

.tag-gradient {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  color: #764ba2;
}

.cinema-distance {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.distance-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
  opacity: 0.7;
}

.distance-text {
  font-size: 24rpx;
  color: #999;
}

.cinema-price-wrapper {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  padding-left: 20rpx;
  border-left: 2rpx solid #f0f0f0;
}

.cinema-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-right: 2rpx;
  font-weight: 600;
}

.price-value {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
}

.price-unit {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

