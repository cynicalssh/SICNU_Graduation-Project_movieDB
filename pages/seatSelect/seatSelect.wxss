.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 150rpx;
}

.screen-info {
  text-align: center;
  padding: 40rpx 0;
}

.screen-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.screen-line {
  width: 80%;
  height: 4rpx;
  background: linear-gradient(to right, transparent, #ff6b35, transparent);
  margin: 0 auto;
  border-radius: 2rpx;
}

.seat-map {
  padding: 20rpx;
}

.seat-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.row-label {
  width: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.seats {
  flex: 1;
  display: flex;
  justify-content: center;
  gap: 8rpx;
}

.seat {
  width: 50rpx;
  height: 50rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}

.seat.available {
  background-color: #4CAF50;
}

.seat.sold {
  background-color: #ccc;
  color: #999;
}

.seat.selected {
  background-color: #ff6b35;
}

.seat-legend {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  gap: 40rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.legend-seat {
  width: 30rpx;
  height: 30rpx;
  border-radius: 6rpx;
}

.legend-seat.available {
  background-color: #4CAF50;
}

.legend-seat.sold {
  background-color: #ccc;
}

.legend-seat.selected {
  background-color: #ff6b35;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selected-info {
  flex: 1;
}

.selected-text {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.confirm-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #ff6b35;
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.confirm-btn[disabled] {
  background-color: #ccc;
  color: #999;
}















