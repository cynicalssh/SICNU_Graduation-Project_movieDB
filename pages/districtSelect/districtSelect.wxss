.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.section {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.district-list {
  height: calc(100vh - 200rpx);
  padding: 20rpx;
}

.district-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #333;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.district-item.active {
  background-color: #fff5e6;
  color: #ff6b35;
  font-weight: bold;
}

.check-icon {
  color: #ff6b35;
  font-size: 36rpx;
  font-weight: bold;
}



