@import "../../comm/style/animation.wxss";
@import "../../component/message/message.wxss";
.fd-hd {
    position: relative;
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    overflow: hidden;
}

.fd-hd:before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 600rpx;
    background-color: rgba(0, 0, 0, .6);
}

.fd-hd-bg {
    position: absolute;
    z-index: -2;
    left: 0;
    top: 0;
    width: 100%;
    height: 600rpx;
    background-size: cover;
    background-position: center;
    filter: blur(30rpx);
    transform: scale(1.2);
}

.fd-favorite {
    box-sizing: border-box;
    position: absolute;
    z-index: 99;
    bottom: 30rpx;
    left: 120rpx;
    width: 160rpx;
    padding: 10rpx 30rpx;
    padding-left: 60rpx;
    font-size: 32rpx;
    line-height: 1;
    border-radius: 30rpx;
    border: 1px solid #fff;
    background-position: 20rpx center;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,);
    background-size: 32rpx;
    color: #fff;
    transition: left .3s, color .3s, background-image .3s;
}

.fd-favorite-active {
    left: 100rpx;
    width: 190rpx;
    background-image: url(data:image/png;base64,);
    color: #f4ea2a;
    border: 1px solid #f4ea2a;
}

.fd-favorite-active::before {
    content: '已'
}

.fd-cover {
    z-index: 9999;
    width: 300rpx;
    height: 420rpx;
    margin-top: 80rpx;
    border-radius: 8rpx;
    box-shadow: 0 30rpx 150rpx rgba(255, 255, 255, .3)
}

.fd-intro {
    z-index: 2;
    width: 320rpx;
    height: 420rpx;
    max-height: 420rpx;
    margin-top: 80rpx;
    margin-left: 40rpx;
    color: #fff;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
}

.fd-title {
    margin-bottom: 30rpx;
    font-size: 42rpx;
}

.fd-intro-txt {
    margin-bottom: 18rpx;
    color: #eee;
}

.fd-data {
    display: flex;
    height: 150rpx;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
}

.fd-data-item {
    width: 33.33%;
    text-align: center;
}

.fd-data-item {
    border-left: 1px solid #eee;
}

.fd-data-item:first-child {
    border-left: none;
}

.fd-data-num {
    font-size: 40rpx;
    font-weight: 100;
    color: #444;
}

.fd-data-title {
    color: #999;
}

.fd-bd {
    padding: 0 40rpx 40rpx;
}

.fd-bd-title {
    padding-left: 20rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #444;
    border-left: 10rpx solid #47a86c;
}

.fd-bd-intro {
    text-align: justify;
    line-height: 1.5;
    color: #666;
}

.fd-bd-tag {
    display: flex;
}

.fd-bd-tag-item {
    padding: 5rpx 10rpx;
    margin-right: 15rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    color: #666;
}

.fd-bd-person {
    display: flex;
    width: 100%;
    padding: 20rpx 0;
    overflow-x: scroll;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
}

.fd-bd-person-item {
    flex-shrink: 0;
    margin-right: 24rpx;
    width: 180rpx;
    text-align: center;
    background: #fff;
    border-radius: 16rpx;
    padding: 16rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.fd-bd-person-item:first-child {
    margin-left: 0;
}

.fd-bd-person-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: linear-gradient(90deg, #47a86c 0%, #5bc77a 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.fd-bd-person-item:active {
    transform: translateY(-4rpx);
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.fd-bd-person-item:active::before {
    opacity: 1;
}

.fd-bd-person-avatar {
    width: 148rpx;
    height: 200rpx;
    border-radius: 12rpx;
    object-fit: cover;
    background: #f5f5f5;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 12rpx;
}

.fd-bd-person-name {
    color: #333;
    font-size: 28rpx;
    font-weight: 500;
    margin-bottom: 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.fd-bd-person-role {
    color: #999;
    font-size: 24rpx;
    padding: 4rpx 12rpx;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf0 100%);
    border-radius: 20rpx;
    display: inline-block;
    margin-top: 4rpx;
}

/* 评论区样式 */
.fd-reviews {
    margin-top: 20rpx;
}

.fd-review-item {
    padding: 30rpx 0;
    border-bottom: 1px solid #f0f0f0;
}

.fd-review-item:last-child {
    border-bottom: none;
}

.fd-review-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.fd-review-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background-color: #f5f5f5;
}

.fd-review-avatar-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
}

.fd-review-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.fd-review-author {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
}

.fd-review-date {
    font-size: 24rpx;
    color: #999;
}

.fd-review-rating {
    display: flex;
    align-items: center;
    padding: 8rpx 16rpx;
    background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
    border-radius: 20rpx;
}

.fd-review-rating-text {
    font-size: 28rpx;
    color: #fff;
    font-weight: bold;
    margin-right: 4rpx;
}

.fd-review-rating-star {
    font-size: 24rpx;
}

.fd-review-content {
    font-size: 30rpx;
    line-height: 1.8;
    color: #666;
    text-align: justify;
    padding-left: 100rpx;
}

.fd-review-load-more {
    text-align: center;
    padding: 30rpx 0;
    color: #999;
    font-size: 28rpx;
}

.fd-review-empty {
    text-align: center;
    padding: 60rpx 0;
    color: #999;
    font-size: 28rpx;
}

/* 讨论区样式 */
.fd-discussions {
    margin-top: 20rpx;
}

.fd-discussion-item {
    padding: 30rpx 0;
    border-bottom: 1px solid #f0f0f0;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.fd-discussion-item:last-child {
    border-bottom: none;
}

.fd-discussion-header {
    margin-bottom: 20rpx;
}

.fd-discussion-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 12rpx;
    line-height: 1.5;
}

.fd-discussion-meta {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #999;
}

.fd-discussion-author {
    margin-right: 20rpx;
    color: #666;
}

.fd-discussion-date {
    color: #999;
}

.fd-discussion-content {
    font-size: 30rpx;
    line-height: 1.8;
    color: #666;
    text-align: justify;
    margin-bottom: 20rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
}

.fd-discussion-footer {
    display: flex;
    align-items: center;
    padding-top: 20rpx;
    border-top: 1px solid #f0f0f0;
}

.fd-discussion-replies {
    font-size: 26rpx;
    color: #999;
    margin-right: 20rpx;
    cursor: pointer;
    transition: color 0.3s;
}

.fd-discussion-replies.active {
    color: #8b5cf6;
    font-weight: 600;
}

.fd-discussion-score {
    font-size: 26rpx;
    color: #ff6b35;
}

/* 回复列表样式 */
.fd-discussion-replies-list {
    margin-top: 20rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #f0f0f0;
}

.fd-reply-loading {
    padding: 30rpx;
    text-align: center;
    color: #999;
    font-size: 26rpx;
}

.fd-reply-item {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
}

.fd-reply-item:last-child {
    border-bottom: none;
}

.fd-reply-header {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
}

.fd-reply-author {
    font-size: 26rpx;
    color: #8b5cf6;
    font-weight: 500;
    margin-right: 20rpx;
}

.fd-reply-date {
    font-size: 24rpx;
    color: #999;
}

.fd-reply-content {
    font-size: 28rpx;
    color: #333;
    line-height: 1.6;
    margin-bottom: 12rpx;
}

.fd-reply-footer {
    display: flex;
    align-items: center;
}

.fd-reply-score {
    font-size: 24rpx;
    color: #999;
}

.fd-reply-empty {
    padding: 30rpx;
    text-align: center;
    color: #999;
    font-size: 26rpx;
}

.fd-discussion-load-more {
    text-align: center;
    padding: 30rpx 0;
    color: #999;
    font-size: 28rpx;
}

.fd-discussion-empty {
    text-align: center;
    padding: 60rpx 0;
    color: #999;
    font-size: 28rpx;
}