/* 容器 */
.container {
    background-color: #f5f5f5;
    min-height: 100vh;
    padding-bottom: 100rpx;
}

/* 顶部用户信息区域 */
.user-header {
    box-sizing: border-box;
    width: 100%;
    background-color: #2c2c2c;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    padding-bottom: 40rpx;
}

/* 顶部操作栏 */
.header-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    padding-top: calc(20rpx + env(safe-area-inset-top));
}

.header-menu {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.menu-icon {
    font-size: 40rpx;
    color: #fff;
    opacity: 0.9;
}

.header-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #fff;
}

.header-actions {
    display: flex;
    gap: 20rpx;
}

.action-icon {
    font-size: 40rpx;
    color: #fff;
    opacity: 0.9;
}

/* 用户信息卡片 */
.user-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 40rpx 30rpx;
}

.avatar-wrapper {
    position: relative;
    margin-bottom: 30rpx;
}

.user-avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.avatar-camera {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 56rpx;
    height: 56rpx;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2rpx solid #fff;
}

.camera-icon {
    font-size: 28rpx;
}

.user-name {
    color: #fff;
    font-size: 44rpx;
    font-weight: 600;
    margin-bottom: 16rpx;
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.user-sex-male, .user-sex-female {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.user-sex-male {
    background-image: url(data:image/png;base64,);
}

.user-sex-female {
    background-image: url(data:image/png;base64,);
}

.user-id-location {
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 24rpx;
}

.location-separator {
    margin: 0 8rpx;
}

/* 个人签名 */
.user-signature-wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
    border-top: 1rpx solid rgba(255, 255, 255, 0.2);
    border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
    margin-bottom: 20rpx;
}

.signature-content {
    flex: 1;
    display: flex;
    align-items: center;
}

.signature-text {
    color: #fff;
    font-size: 28rpx;
    line-height: 1.5;
}

.signature-placeholder {
    color: rgba(255, 255, 255, 0.6);
    font-size: 28rpx;
}

.signature-arrow {
    color: rgba(255, 255, 255, 0.6);
    font-size: 36rpx;
    margin-left: 20rpx;
}

/* 关于我 */
.user-about {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16rpx 0;
    margin-bottom: 20rpx;
}

.about-text {
    color: rgba(255, 255, 255, 0.9);
    font-size: 28rpx;
}

.about-arrow {
    color: rgba(255, 255, 255, 0.6);
    font-size: 36rpx;
}

/* 用户统计 */
.user-stats {
    width: 100%;
    display: flex;
    gap: 40rpx;
}

.stats-item {
    color: rgba(255, 255, 255, 0.8);
    font-size: 26rpx;
}

/* 导航标签栏 */
.nav-tabs {
    display: flex;
    align-items: center;
    background-color: #fff;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    font-size: 28rpx;
    color: #666;
    position: relative;
}

.tab-item.active {
    color: #42bd56;
    font-weight: 600;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 4rpx;
    background-color: #42bd56;
    border-radius: 2rpx;
}

.tab-search {
    width: 60rpx;
    text-align: center;
    font-size: 32rpx;
    color: #666;
}

/* 内容区域 */
.content-section {
    background-color: #fff;
    margin-top: 20rpx;
    padding: 30rpx;
}

.section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
}

.section-desc {
    flex: 1;
    font-size: 26rpx;
    color: #999;
    margin-left: 20rpx;
}

.section-arrow {
    font-size: 36rpx;
    color: #999;
}

/* TOP10卡片 */
.top10-card {
    display: flex;
    align-items: center;
    padding: 30rpx;
    background: linear-gradient(135deg, #f5f5f5 0%, #fff 100%);
    border-radius: 16rpx;
    margin-bottom: 20rpx;
}

.top10-icon {
    font-size: 60rpx;
    margin-right: 24rpx;
}

.top10-content {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.top10-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 8rpx;
}

.top10-desc {
    font-size: 24rpx;
    color: #999;
}

.top10-decoration {
    font-size: 48rpx;
}

/* 书影音档案 */
.archive-subsection {
    margin-bottom: 40rpx;
}

.subsection-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.subsection-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
}

.subsection-arrow {
    font-size: 32rpx;
    color: #999;
}

.archive-items {
    display: flex;
    gap: 30rpx;
    padding: 20rpx 0;
}

.archive-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12rpx;
}

.archive-icon {
    font-size: 48rpx;
    margin-bottom: 8rpx;
}

.archive-label {
    font-size: 26rpx;
    color: #666;
}

.archive-count {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
}

/* 音乐占位 */
.music-placeholder {
    display: flex;
    align-items: center;
    padding: 30rpx;
    background-color: #f9f9f9;
    border-radius: 12rpx;
}

.music-icon {
    font-size: 40rpx;
    margin-right: 16rpx;
}

.music-text {
    font-size: 26rpx;
    color: #999;
}

/* 空状态提示 */
.empty-tip {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    min-height: 400rpx;
}

.empty-icon {
    font-size: 120rpx;
    margin-bottom: 30rpx;
    opacity: 0.5;
}

.empty-text {
    font-size: 32rpx;
    color: #666;
    margin-bottom: 16rpx;
}

.empty-desc {
    font-size: 26rpx;
    color: #999;
}

/* 相册区域 */
.gallery-section {
    background-color: #fff;
    margin-top: 20rpx;
    padding: 30rpx;
    min-height: calc(100vh - 600rpx);
}

.gallery-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-bottom: 100rpx;
}

.gallery-item {
    width: calc(33.333% - 14rpx);
    aspect-ratio: 1;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
    background-color: #f5f5f5;
}

.gallery-image {
    width: 100%;
    height: 100%;
    display: block;
}
