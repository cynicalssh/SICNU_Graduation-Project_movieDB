<view class="container">
    <view class="user-info" style="{{skin.indexOf('linear-gradient') !== -1 ? 'background: ' + skin : 'background-image: url(' + skin + ')'}}">
        <view class="user-skin" bindtap="viewSkin"></view>
        <image src="{{userInfo.avatarUrl || '/resource/logo.png'}}" class="user-avatar" binderror="onAvatarError" bindtap="onAvatarTap"></image>
        <view class="user-nickname">
            {{userInfo.nickName}}
            <block wx:if="{{userInfo.gender == 1}}">
                <view class="user-sex-male"></view>
            </block>
            <block wx:elif="{{userInfo.gender == 2}}">
                <view class="user-sex-female"></view>
            </block>
        </view>
        <view class="user-location">
            <block wx:if="{{userInfo.province || userInfo.city}}">
                <block wx:if="{{userInfo.province}}">{{userInfo.province}}</block>
                <block wx:if="{{userInfo.province && userInfo.city}}">，</block>
                <block wx:if="{{userInfo.city}}">{{userInfo.city}}</block>
            </block>
            <block wx:else>未设置位置</block>
        </view>
    </view>
    <view class="grids">
        <block wx:for="{{gridList}}" wx:for-item="gridItem" wx:for-index="gridIndex" wx:key="grid">
            <view class="grid" bindtap="viewGridDetail" data-url="{{gridItem.enName}}">
                <view class="grid-icon grid-icon-{{gridItem.enName}}"></view>
                <view class="grid-title">{{gridItem.zhName}}</view>
            </view>
        </block>
    </view>
</view>