.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header-info {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.film-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.cinema-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cinema-name {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.location-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f7fa;
  border-radius: 50%;
  margin-left: 20rpx;
  transition: all 0.3s ease;
}

.location-btn:active {
  background-color: #e8ecf0;
  transform: scale(0.9);
}

.location-icon {
  font-size: 32rpx;
}

.date-selector {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1px solid #e5e5e5;
}

.date-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.date-item.active {
  background-color: #ff6b35;
  color: #fff;
}

.date-label {
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.date-value {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.date-weekday {
  font-size: 22rpx;
}

.schedule-list {
  padding: 20rpx 0;
}

.schedule-section {
  margin-bottom: 30rpx;
}

.section-title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
}

.schedule-items {
  background-color: #fff;
  padding: 0 30rpx;
}

.schedule-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.schedule-item:last-child {
  border-bottom: none;
}

.schedule-time {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  width: 150rpx;
}

.schedule-info {
  flex: 1;
  margin-left: 30rpx;
}

.schedule-hall {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.schedule-language {
  font-size: 24rpx;
  color: #999;
}

.schedule-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}



