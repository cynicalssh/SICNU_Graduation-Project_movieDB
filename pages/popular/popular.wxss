@import "../../component/filmList/filmList.wxss";
@import "../../component/message/message.wxss";

.content-wrapper {
    padding-top: 160rpx;
    min-height: 100vh;
    background-color: #f5f5f5;
}

.header-bar {
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    background-color: #fff;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, .1);
}

.city-selector {
    display: flex;
    align-items: center;
    padding: 15rpx 20rpx;
    border-bottom: 1px solid #eee;
}

.city-icon {
    font-size: 32rpx;
    margin-right: 10rpx;
}

.city-name {
    font-size: 28rpx;
    color: #333;
    flex: 1;
}

.city-arrow {
    font-size: 20rpx;
    color: #999;
    margin-left: 10rpx;
}

.search-bar {
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    padding: 10rpx;
    background-color: #eee;
    text-align: center;
}

.search-txt {
    display: inline-block;
    width: 730rpx;
    height: 60rpx;
    background-color: #fff;
    background-image: url(data:image/png;base64,);
    background-position: 20rpx center;
    background-repeat: no-repeat;
    background-size: 50rpx;
    border-radius: 8rpx;
}

.search-txt-plc {
    color: #bfbfbf;
}

.banner {
    width: 750rpx;
    height: 300rpx;
    margin-top: 0;
    background-color: #eee;
    animation: fadeIn 1.8s;
    margin-bottom: 0;
}

.banner-item {
    width: 750rpx;
    height: 300rpx;
}

.tab-bar {
    display: flex;
    background-color: #fff;
    border-bottom: 1px solid #eee;
    position: sticky;
    top: 160rpx;
    z-index: 100;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, .05);
    margin-top: 0;
    margin-bottom: 0;
    width: 100%;
    box-sizing: border-box;
}

.tab-item {
    flex: 1;
    text-align: center;
    padding: 30rpx 0;
    font-size: 32rpx;
    color: #333;
    position: relative;
    transition: color 0.3s;
}

.tab-item.active {
    color: #ff6b35;
    font-weight: bold;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80rpx;
    height: 4rpx;
    background-color: #ff6b35;
    border-radius: 2rpx;
}