@import "../../component/filmList/filmList.wxss";
@import "../../component/message/message.wxss";

.content-wrapper {
    padding-top: 120rpx;
    min-height: 100vh;
    background-color: #f5f5f5;
}

.header-bar {
    display: flex;
    align-items: center;
    padding: 24rpx 30rpx;
    background: #ffffff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
    box-sizing: border-box;
}

.location-wrapper {
    display: flex;
    align-items: center;
    margin-right: 20rpx;
    padding: 0;
}

.location-icon-wrapper {
    width: 40rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 8rpx;
    position: relative;
}

.location-icon-outline {
    width: 32rpx;
    height: 32rpx;
    border: 3rpx solid #FFC107;
    border-radius: 50% 50% 50% 0;
    transform: rotate(-45deg);
    position: relative;
}

.location-icon-outline::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
    width: 8rpx;
    height: 8rpx;
    background: #FFC107;
    border-radius: 50%;
}

.location-text {
    font-size: 30rpx;
    color: #1a1a1a;
    font-weight: 500;
}

.search-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
}

.search-input-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 24rpx;
    background: #f5f5f5;
    border-radius: 50rpx;
    min-height: 64rpx;
    box-sizing: border-box;
}

.search-placeholder {
    font-size: 28rpx;
    color: #999;
    flex: 1;
}

.search-icon-wrapper {
    width: 32rpx;
    height: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 12rpx;
}

.search-icon-outline {
    width: 28rpx;
    height: 28rpx;
    border: 2rpx solid #999;
    border-radius: 50%;
    position: relative;
}

.search-icon-outline::after {
    content: '';
    position: absolute;
    bottom: -4rpx;
    right: -4rpx;
    width: 10rpx;
    height: 2rpx;
    background: #999;
    transform: rotate(45deg);
    border-radius: 2rpx;
}

.banner {
    width: 750rpx;
    height: 300rpx;
    margin-top: 0;
    background-color: #eee;
    animation: fadeIn 1.8s;
    margin-bottom: 0;
}

.banner-item {
    width: 750rpx;
    height: 300rpx;
}

.tab-bar {
    display: flex;
    background-color: #fff;
    border-bottom: 1px solid #eee;
    position: sticky;
    top: 120rpx;
    z-index: 100;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, .05);
    margin-top: 0;
    margin-bottom: 0;
    width: 100%;
    box-sizing: border-box;
}

.tab-item {
    flex: 1;
    text-align: center;
    padding: 30rpx 0;
    font-size: 32rpx;
    color: #333;
    position: relative;
    transition: color 0.3s;
}

.tab-item.active {
    color: #ff6b35;
    font-weight: bold;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80rpx;
    height: 4rpx;
    background-color: #ff6b35;
    border-radius: 2rpx;
}

.tab-swiper {
    width: 100%;
    height: calc(100vh - 256rpx);
    background-color: #f5f5f5;
}

.tab-swiper swiper-item {
    height: 100%;
    overflow: hidden;
}

.swiper-content {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}