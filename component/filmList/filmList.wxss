@import "../../comm/style/animation.wxss";
.film {
    box-sizing: border-box;
    width: 750rpx;
    padding: 20rpx;
    background-color: #f5f5f5;
}

.film-item {
    width: 100%;
    margin-bottom: 30rpx;
    border-radius: 16rpx;
    background-color: #fff;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
    overflow: hidden;
    animation: fadeIn 0.5s;
    display: flex;
    flex-direction: row;
    padding: 20rpx;
}

.film-poster {
    width: 200rpx;
    height: 280rpx;
    border-radius: 12rpx;
    overflow: hidden;
    flex-shrink: 0;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.film-poster-img {
    width: 100%;
    height: 100%;
}

.film-info {
    flex: 1;
    margin-left: 24rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.film-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 16rpx;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.film-rating-section {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}

.film-rating-score {
    font-size: 32rpx;
    font-weight: bold;
    color: #ff6b35;
    margin-right: 12rpx;
}

.film-stars {
    display: flex;
    align-items: center;
    gap: 4rpx;
}

.star-wrapper {
    position: relative;
    width: 28rpx;
    height: 28rpx;
    margin-right: 4rpx;
}

.star-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.star-fill {
    position: absolute;
    width: 0%;
    height: 100%;
    top: 0;
    left: 0;
    overflow: hidden;
    transition: width 0.3s ease;
}

.star-icon {
    font-size: 28rpx;
    line-height: 1;
    display: block;
    width: 28rpx;
    height: 28rpx;
}

.star-icon.star-filled {
    color: #ffd700;
}

.star-icon.star-empty {
    color: #ddd;
}

.film-cast {
    font-size: 26rpx;
    color: #666;
    line-height: 1.6;
    margin-bottom: 12rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.film-cast-label {
    color: #999;
}

.film-cast-names {
    color: #333;
}

.film-release {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 20rpx;
}

.film-release-date {
    color: #666;
    font-weight: 500;
}

.film-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: auto;
}

.film-buy-btn {
    width: 140rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
    color: #fff;
    border: none;
    border-radius: 30rpx;
    font-size: 28rpx;
    padding: 0;
    margin: 0;
    box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.3);
}

.film-buy-btn::after {
    border: none;
}

.loading-tip {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #999;
    font-size: 28rpx;
}

.film .loading,
.loading {
    width: 100% !important;
    min-height: 400rpx !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    color: #666;
    font-size: 28rpx;
    padding: 40rpx 20rpx;
    box-sizing: border-box;
    position: relative !important;
    margin: 0 auto;
    left: auto !important;
    top: auto !important;
    right: auto !important;
    bottom: auto !important;
    transform: none !important;
}

.film .loading text,
.loading text {
    display: block !important;
    padding: 16rpx 32rpx;
    background-color: rgba(0, 0, 0, 0.05);
    border-radius: 8rpx;
    text-align: center;
    margin: 0 auto;
    white-space: nowrap;
    width: auto;
    height: auto;
    line-height: normal;
    font-size: 24rpx;
}